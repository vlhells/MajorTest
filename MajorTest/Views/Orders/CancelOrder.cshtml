@model MajorTest.Models.Order;

@{
    ViewBag.Title = "Отмена заявки";
}

<form class="centered" id="subPageMargin" asp-action="CancelOrder" asp-controller="Orders">
@*    <div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="CancellationComment" class="control-label">Причина отмены:</label>
        <input type="text" asp-for="CancellationComment" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>