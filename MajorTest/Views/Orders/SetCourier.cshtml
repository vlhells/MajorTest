@using MajorTest.Dto

@model SelectCourierDto

@{
    ViewBag.Title = "Выбор курьера для заказа";
}

<form method="post" asp-controller="Orders" asp-action="SetCourier" class="centered">
    <div asp-validation-summary="All" class="text-danger"></div>

    <p class ="form-group">
        <label>Список курьеров: </label>
        <select asp-for="SelectedCourierId" asp-items="Model.AllCouriers">
            <option value="">Выбрать курьера</option>
        </select>
    </p>
    <div class="form-group">
        <input type="hidden" asp-for="ThisOrderId" />
    </div>

    <div class="form-group">
        <input type="submit" value="Передать на выполнение курьеру" class="btn btn-outline-secondary" />
    </div>
</form>