@using MajorTest.Models

@model IEnumerable<Courier>

@{
	ViewBag.Title = "Все курьеры";
}

<p id="addNew"><a asp-action="Create">Добавить нового курьера</a></p>
<table class="centered">
	<tr>
		<th>ФИО курьера</th>
		<th>Контактный номер курьера</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.FirstName @item.SecondName @item.LastName</td>
			<td>@item.PhoneNumber</td>
			<td>
				<a asp-action="Edit" asp-controller="Courier" asp-route-id="@item.Id">Редактировать</a>
			</td>
			<td>
				<form asp-controller="Courier" asp-action="Delete" method="post" asp-route-id="@item.Id">
					<input type="submit" value="Удалить" />
				</form>
			</td>
		</tr>
	}
</table>